        {
          "key": "tabAdvancedInputs",
          "type": "tabPane",
          "label": "Advanced Inputs",
          "children": [
            {
              "key": "contacts",
              "type": "repeater",
              "label": "Contact List (Repeater with Min/Max Validation)",
              "helpText": "This repeater demonstrates add/remove functionality with min/max items validation. Try adding and removing items to see the buttons disable at limits.",
              "children": [
                {
                  "key": "contactName",
                  "type": "input",
                  "label": "Contact Name",
                  "controlType": "text",
                  "settings": {
                    "floatingLabel": true
                  },
                  "validators": [
                    {
                      "name": "required",
                      "errorMessage": "Contact name is required"
                    }
                  ]
                },
                {
                  "key": "contactEmail",
                  "type": "input",
                  "label": "Email Address",
                  "controlType": "email",
                  "settings": {
                    "floatingLabel": true
                  },
                  "validators": [
                    {
                      "name": "required"
                    },
                    {
                      "name": "email"
                    }
                  ]
                },
                {
                  "key": "contactPhone",
                  "type": "input",
                  "label": "Phone Number",
                  "controlType": "tel",
                  "settings": {
                    "floatingLabel": true
                  }
                }
              ],
              "validators": [
                {
                  "name": "minItems",
                  "value": 1,
                  "errorMessage": "At least one contact is required"
                },
                {
                  "name": "maxItems",
                  "value": 5,
                  "errorMessage": "Maximum of 5 contacts allowed"
                }
              ],
              "value": [
                {
                  "contactName": "John Doe",
                  "contactEmail": "john.doe@example.com",
                  "contactPhone": "+1 (555) 123-4567"
                }
              ],
              "settings": {
                "addButton": {
                  "label": "Add Contact",
                  "icon": "bi-plus-circle"
                },
                "removeButton": {
                  "label": "Remove",
                  "icon": "bi-dash-circle"
                }
              }
            }
          ]
        },
        {
          "key": "tabCustomInputs",
          "type": "tabPane",
          "label": "Multiple Value Inputs",
          "children": [
            {
              "key": "multipleInputsGroup",
              "type": "formGroup",
              "children": [
                {
                  "key": "emailAddresses",
                  "type": "input",
                  "controlType": "email",
                  "label": "Email Address",
                  "multipleLabel": "Email Addresses (Multiple Values)",
                  "helpText": "Add multiple email addresses. Each email will be validated individually.",
                  "multiple": true,
                  "value": ["john.doe@example.com"],
                  "settings": {
                    "floatingLabel": true,
                    "addButton": {
                      "label": "Add Email",
                      "icon": "bi-plus-circle"
                    },
                    "removeButton": {
                      "label": "Remove",
                      "icon": "bi-dash-circle"
                    }
                  },
                  "validators": [
                    {
                      "name": "required",
                      "errorMessage": "Email is required"
                    },
                    {
                      "name": "email",
                      "errorMessage": "Please enter a valid email address"
                    }
                  ]
                },
                {
                  "key": "phoneNumbers",
                  "type": "input",
                  "controlType": "tel",
                  "label": "Phone Number",
                  "multipleLabel": "Phone Numbers (Multiple Values)",
                  "helpText": "Add multiple phone numbers. You can add as many as you need.",
                  "multiple": true,
                  "value": ["+1 (555) 123-4567"],
                  "settings": {
                    "floatingLabel": true,
                    "addButton": {
                      "label": "Add Phone",
                      "icon": "bi-plus-circle"
                    },
                    "removeButton": {
                      "label": "Remove",
                      "icon": "bi-dash-circle"
                    }
                  },
                  "validators": [
                    {
                      "name": "required",
                      "errorMessage": "Phone number is required"
                    },
                    {
                      "name": "pattern",
                      "value": "^[+]?[(]?[0-9]{1,4}[)]?[-\\s.]?[(]?[0-9]{1,4}[)]?[-\\s.]?[0-9]{1,9}$",
                      "errorMessage": "Please enter a valid phone number"
                    }
                  ]
                },
                {
                  "key": "urls",
                  "type": "input",
                  "controlType": "url",
                  "label": "Website URL",
                  "multipleLabel": "Website URLs (Multiple Values)",
                  "helpText": "Add multiple website URLs. Each URL will be validated to ensure proper format.",
                  "multiple": true,
                  "value": ["https://example.com"],
                  "settings": {
                    "floatingLabel": true,
                    "addButton": {
                      "label": "Add URL",
                      "icon": "bi-plus-circle"
                    },
                    "removeButton": {
                      "label": "Remove",
                      "icon": "bi-dash-circle"
                    }
                  },
                  "validators": [
                    {
                      "name": "required",
                      "errorMessage": "URL is required"
                    }
                  ]
                },
                {
                  "key": "tags",
                  "type": "input",
                  "controlType": "text",
                  "label": "Tag",
                  "multipleLabel": "Tags (Multiple Values with Validation)",
                  "helpText": "Add multiple tags. Tags must be between 2-20 characters.",
                  "multiple": true,
                  "value": ["angular", "forms"],
                  "settings": {
                    "floatingLabel": true,
                    "addButton": {
                      "label": "Add Tag",
                      "icon": "bi-plus-circle"
                    },
                    "removeButton": {
                      "label": "Remove",
                      "icon": "bi-dash-circle"
                    }
                  },
                  "validators": [
                    {
                      "name": "required",
                      "errorMessage": "Tag is required"
                    },
                    {
                      "name": "minLength",
                      "value": 2,
                      "errorMessage": "Tag must be at least {expected} characters (current: {actual})"
                    },
                    {
                      "name": "maxLength",
                      "value": 20,
                      "errorMessage": "Tag must not exceed {expected} characters (current: {actual})"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "buttons": [
    {
      "key": "submit",
      "type": "submit",
      "label": "Submit",
      "icon": "bi-check",
      "class": "btn-success",
      "settings": {
        "disableIfFormInvalid": true
      },
      "callback": {
        "function": "formSubmit"
      }
    },
    {
      "key": "loadRemoteData",
      "type": "button",
      "label": "Load Remote Data",
      "icon": "bi-cloud",
      "class": "btn-primary",
      "callback": {
        "function": "customCallback",
        "params": {
          "url": "/get-form-inputs-data"
        }
      }
    }
  ]
