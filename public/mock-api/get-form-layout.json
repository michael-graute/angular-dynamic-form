{
  "buttons": [
    {
      "key": "submit",
      "type": "submit",
      "label": "Submit",
      "icon": "bi-check",
      "class": "btn-success",
      "settings": {
        "disableIfFormInvalid": true
      },
      "callback": {
        "function": "formSubmit",
        "params": ["foo", "bar", 1234]
      }
    },
    {
      "key": "loadRemoteData",
      "type": "button",
      "label": "Load Remote Data",
      "icon": "bi-cloud",
      "class": "btn-primary",
      "callback": {
        "function": "customCallback",
        "params": {"url": "/get-form-layout-data"}
      }
    }
  ],
  "elements": [
    {
      "key": "user-information",
      "type": "card",
      "label": "Layout Container of Type \"card\"",
      "children": [
        {
          "key": "formTextRowCols",
          "type": "form-text",
          "value": "<p>The following elements are wrapped inside \"row\" and \"col\" layout containers</p>"
        },
        {
          "key": "name-row",
          "type": "row",
          "children": [
            {
              "key": "gender-col",
              "type": "col",
              "class": "col-2",
              "children": [
                {
                  "type": "select",
                  "key": "gender",
                  "label": "Gender",
                  "settings": {
                    "floatingLabel": true
                  },
                  "options": [
                    {
                      "label": "Mr.",
                      "value": "male"
                    },
                    {
                      "label": "Mrs.",
                      "value": "female"
                    },
                    {
                      "label": "Diverse",
                      "value": "diverse"
                    }
                  ],
                  "validators": [
                    {
                      "name": "required"
                    }
                  ]
                }
              ]
            },
            {
              "key": "firstname-col",
              "type": "col",
              "children": [{
                "key": "firstname",
                "label": "Firstname",
                "type": "input",
                "controlType": "text",
                "settings": {
                  "floatingLabel": true
                }
              }]
            },
            {
              "key": "lastname-col",
              "type": "col",
              "children": [{
                "key": "lastname",
                "label": "Lastname",
                "type": "input",
                "controlType": "text",
                "settings": {
                  "floatingLabel": true
                },
                "validators": [
                  {
                    "name": "required"
                  },
                  {
                    "name": "minLength",
                    "value": 9
                  }
                ]
              }]
            }
          ]
        },
        {
          "key": "contact-row",
          "type": "row",
          "children": [
            {
              "key": "email-col",
              "type": "col",
              "children": [{
                "key": "email",
                "label": "E-Mail Address",
                "type": "input",
                "controlType": "email",
                "settings": {
                  "floatingLabel": true
                },
                "validators": [
                  {
                    "name": "email"
                  },
                  {
                    "name": "required"
                  }
                ]
              }]
            },
            {
              "key": "phone-col",
              "type": "col",
              "children": [
                {
                  "key": "phone",
                  "label": "Telephone",
                  "type": "input",
                  "controlType": "phone",
                  "settings": {
                    "floatingLabel": true
                  }
                }
              ]
            }
          ]
        },
        {
          "key": "formTextRowCols",
          "type": "form-text",
          "value": "<h6>Layout Container of type \"tabContainer\"</h6>"
        },
        {
          "key": "tabContainer",
          "type": "tabContainer",
          "children": [
            {
              "key": "tabOne",
              "type": "tabPane",
              "label": "Tab No. 1",
              "children": [
                {
                  "key": "tabOneText",
                  "type": "form-text",
                  "value": "foo"
                }
              ]
            },
            {
              "key": "tabTwo",
              "type": "tabPane",
              "label": "Tab No. 2",
              "children": []
            }
          ]
        }
      ]
    }
  ]
}
